<h4>
    Обработчики событий
</h4>
<div>
    <a href="https://vueframework.com/docs/v3/ru/ru/guide/events.html#%D0%BD%D0%B5%D1%81%D0%BA%D0%BE%D0%BB%D1%8C%D0%BA%D0%BE-%D0%BE%D0%B1%D1%80%D0%B0%D0%B1%D0%BE%D1%82%D1%87%D0%B8%D0%BA%D0%BE%D0%B2-%D1%81%D0%BE%D0%B1%D1%8B%D1%82%D0%B8%D1%8F"
        target="_blank" rel="noopener noreferrer"></a>
</div>>

<div id="event-with-method">
    <!-- `greet` — это название метода, определённого ниже -->
    <button v-on:click="greet">стандартный вызов метода</button>
    <div>
        <button v-on:click="say('hi')">передача параметра</button>
    </div>

    <div>
        <!-- оба метода one() и two() будут вызваны при клике на кнопке -->
        <button v-on:click="one($event), two($event)">
            Отправить (не работает кнопка)
        </button>

    </div>
</div>



@section Scripts{
<script>
    Vue.createApp({
        data() {
            return {
                name: 'Vue.js'
            }
        },
        methods: {
            greet(event) {
                // `this` внутри методов указывает на текущий активный экземпляр
                alert('Привет, ' + this.name + '!')
                // `event` — нативное событие DOM
                @* if (event) { *@
                    alert(event.target.tagName)
                @* } *@
            },
            say(pharase) {
                alert(pharase);
            }
        }
    }).mount('#event-with-method')


</script>
}